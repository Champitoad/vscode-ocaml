{
  "private": true,
  "name": "ocaml",
  "displayName": "OCaml",
  "description": "Rich OCaml language support for Visual Studio Code",
  "version": "0.2.2",
  "publisher": "hackwaly",
  "icon": "images/colour-icon.svg",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:ocaml",
    "onLanguage:ocamllex",
    "onLanguage:ocamlyacc"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "ocaml",
        "aliases": [
          "OCaml"
        ],
        "extensions": [
          ".ml",
          ".mli"
        ],
        "configuration": "./ocaml.configuration.json"
      },
      {
        "id": "ocamllex",
        "aliases": [
          "OCamllex"
        ],
        "extensions": [
          ".mll"
        ],
        "configuration": "./ocamllex.configuration.json"
      },
      {
        "id": "ocamlyacc",
        "aliases": [
          "OCamlyacc"
        ],
        "extensions": [
          ".mly"
        ],
        "configuration": "./ocamlyacc.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ocaml",
        "scopeName": "source.ocaml",
        "path": "./syntaxes/OCaml.tmLanguage"
      },
      {
        "language": "ocamllex",
        "scopeName": "source.ocamllex",
        "path": "./syntaxes/OCamllex.tmLanguage"
      },
      {
        "language": "ocamlyacc",
        "scopeName": "source.ocamlyacc",
        "path": "./syntaxes/OCamlyacc.tmLanguage"
      }
    ],
    "debuggers": [
      {
        "type": "ocamldebug",
        "label": "OCaml",
        "program": "./out/src/debug/debug.js",
        "runtime": "node",
        "enableBreakpointsFor": {
          "languageIds": [
            "ocaml"
          ]
        },
        "initialConfigurations": [
          {
            "name": "OCaml",
            "type": "ocamldebug",
            "request": "launch",
            "program": "${workspaceRoot}/main.d.byte",
            "stopOnEntry": false
          }
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "cd": {
                "type": "string",
                "description": "The working directory for ocamldebug."
              },
              "program": {
                "type": "string",
                "description": "The path of program to debug."
              },
              "arguments": {
                "type": "string",
                "description": "The command-line arguments for the program."
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": false
              }
            }
          }
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "OCaml configuration",
      "properties": {
        "ocaml.ocpIndentPath": {
          "type": "string",
          "default": "ocp-indent"
        },
        "ocaml.merlinPath": {
          "type": "string",
          "default": "ocamlmerlin"
        },
        "ocaml.lintDelay": {
          "type": "number",
          "default": 500
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "typescript": "^1.8.5",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "get-stream": "^2.2.1",
    "uuid": "^2.0.2",
    "vscode-debugadapter": "^1.9.0",
    "vscode-debugprotocol": "^1.9.0"
  }
}
